<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".gameActivity"
    android:background="@color/teal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/game_IMG_playerOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_player_one"
            android:layout_above="@id/game_LBL_playerOne"
            android:layout_marginLeft="25dp"/>

        <ImageView
            android:id="@+id/game_IMG_playerTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_player_two"
            android:layout_above="@id/game_LBL_playerTwo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/game_LBL_playerOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="00"
            android:textSize="40dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/game_LBL_playerTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:text="00"
            android:textSize="40dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">


            <ImageView
                android:id="@+id/game_IMG_card1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_card_back" />

            <ImageView
                android:id="@+id/game_IMG_card2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_card_back" />

        </LinearLayout>

        <Button
            android:id="@+id/game_BTN_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_buttom"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/yellow"/>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>