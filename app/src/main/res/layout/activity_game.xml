<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    tools:context=".gameActivity"
    android:background="@drawable/img_game_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@id/game_center_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp">

            <TextView
                android:id="@+id/game_LBL_playerOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="40dp"
                android:textStyle="bold" />
            <Space
                android:layout_width="150dp"
                android:layout_height="0dp"
                ></Space>

            <ImageButton
                android:id="@+id/game_BTN_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/img_btn_fight" />
            <Space
                android:layout_width="150dp"
                android:layout_height="0dp"
                ></Space>

            <TextView
                android:id="@+id/game_LBL_playerTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/game_center_layout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/game_IMG_playerOne"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/img_pirate" />

                <ImageView
                    android:id="@+id/game_IMG_card1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/img_card_back" />

                <ImageView
                    android:id="@+id/game_IMG_card2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/img_card_back" />

                <ImageView
                    android:id="@+id/game_IMG_playerTwo"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/img_indian" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>